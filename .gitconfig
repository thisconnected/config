[user]
	email = patryk.kaniewski.ext@nokia.com
	name = Patryk Kaniewski
[color]
	ui = auto
[alias]
	lg = log --date=relative --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ad)%Creset'
	graph = log --graph --decorate --oneline
	mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -    
[core]
	pager = delta
	editor = emacs
[delta]
	navigate = true
	light = false
	side-by-side = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[safe]
	directory = /var/www/enhancement-microservices
	directory = /var/www/nsc
[status]
	showUntrackedFiles = no
